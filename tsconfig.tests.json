{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./build-test",
    "declaration": false,
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/state/chooseNextCardReducer.ts",
    "src/models/**/*.ts"
  ]
}
